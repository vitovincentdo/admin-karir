<div class="container-fluid slice">
  <div class="container align-self-center">
    <div class="form-horizontal">
      <br>
      <div class="form-group">
        <label class="col-sm-3 control-label">Job Name</label>
        <div class="col-sm-10">
          {{input type="text" value=model.name class="form-control" placeholder="Input Job Name..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Job Specialization</label>
        <div class="col-sm-10">
          {{input type="text" value=model.specialization class="form-control" placeholder="Input Job Specialization..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Job Location</label>
        <div class="col-sm-10">
          {{input type="text" value=model.location class="form-control" placeholder="Input Job Location (i.e jakarta, surabaya,...)"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label">Image-Job (Drag & Drop Here)</label>
        <div class="col-sm-6">
          {{tinymce-editor options=jobImageOptions value=model.thumbJob}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label">Job Description</label>
        <div class="col-sm-8">
          {{tinymce-editor options=ownOptions value=model.description}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label">Job Qualification</label>
        <div class="col-sm-8">
          {{tinymce-editor options=ownOptions value=model.qualification}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-6 control-label">Job URL</label>
        <div class="col-sm-8">
          {{input type="text" value=model.url class="form-control" placeholder="Input job url..."}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Job Featured</label>
        <div class="col-sm-10">
          {{model.featured}}
          <input type="checkbox" onchange={{action "valueHasChanged" value="target.checked"}} checked={{model.featured}}>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" {{action "saveJob" model}}>Add to Job List</button>
        </div>
      </div>
    </div>

    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

  </div>
</div>

{{outlet}}